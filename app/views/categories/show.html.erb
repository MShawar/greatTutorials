<div class="center hero-unit" style="height:30px">
  <h3><%= @category.name %></h3>
  <% if @category.topics.any? %>
      <h6>Topics (<%= @category.topics.count %>)</h6>
      <table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
  </tr>
</thead>
        <%= render @topics %>
        </table>
      <% else %>
      <div class="label" style="margin-top:25px; margin-bottom:25px;">
      <h3>No Topics</h3>
      </div>
    <% end %>
  </h3>
<%if current_user.try(:admin?)%>
                    <%= link_to 'Add topic', new_topic_path(:category => @category.id), :class => 'btn btn-large'%> 
<%= link_to 'Edit', edit_category_path(@category), :class => 'btn btn-large' %> 
                 <% end %> 

<%= link_to 'Back', root_url, :class => 'btn btn-large' %>
</div> 
